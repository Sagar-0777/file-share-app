# Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB
MONGO_URI=mongodb://localhost:27017/shareApp

# Server
PORT=8000

# JWT Secret (for OTP authentication)
# Generate a strong random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Auth0 Configuration
# Get these from your Auth0 dashboard
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=your-api-identifier
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# AWS S3 Configuration
# Get these from AWS IAM
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=ap-south-1

# Twilio Configuration
# Get these from Twilio console
TWILIO_SID=your-twilio-account-sid
TWILIO_AUTH=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Frontend URL (for generating download links)
FRONTEND_URL=http://localhost:3000
